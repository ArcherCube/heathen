{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "node_modules/@heathen-types"]
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
